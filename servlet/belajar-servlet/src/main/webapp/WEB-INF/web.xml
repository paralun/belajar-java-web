<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>belajar-servlet</display-name>
    <servlet>
        <servlet-name>HaloServlet</servlet-name>
        <servlet-class>com.paralun.app.HaloServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Invalidate</servlet-name>
        <servlet-class>com.paralun.app.Invalidate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Komentar</servlet-name>
        <servlet-class>com.paralun.app.Komentar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HaloServlet</servlet-name>
        <url-pattern>/halo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Invalidate</servlet-name>
        <url-pattern>/invalidate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Komentar</servlet-name>
        <url-pattern>/comment</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
